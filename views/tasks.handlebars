<html>
<head>
	<title>m.n.m.l.</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/tasks.css" rel="stylesheet">

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
</head>

<body>
	<div class="container">
		<div id="title">
			<h1>today's tasks</h1>
			<h4><a href="/">home</a></h4>
		</div>
		<hr>
		<ul>
			{{#each tasks}}
				<li>{{name}}</li>
			{{/each}}
		</ul>
		<br>

		<!-- <h3><a href="#">add task</a></h3> -->

		<form id="addTaskForm" role="form" method="get" action="/add">
    	    <div class="form-group">
    	      <input type="text" class="form-control" id="name" placeholder="add a task" name="name">
    	    </div>
    	    <input type="submit" id="submitBtn" class="btn btn-default" value="add the task!"></input>
    	</form>
	</div>
</body>
</html>
